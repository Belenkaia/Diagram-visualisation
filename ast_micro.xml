<?xml version="1.0"?>
<program>
	<identifier>HandDryerController</identifier>
	<tact>100</tact>
	<const_spec>
		<identifier>ON</identifier>
		<const_term>1</const_term>
	</const_spec>
	<const_spec>
		<identifier>OFF</identifier>
		<const_term>0</const_term>
	</const_spec>
	<register_def>
		<direction_spec>INPUT</direction_spec>
		<identifier>SENSOR_PORT</identifier>
		<reg_addr>0</reg_addr>
		<reg_addr>0</reg_addr>
		<reg_size>8</reg_size>
	</register_def>
	<register_def>
		<direction_spec>OUTPUT</direction_spec>
		<identifier>ACTUATOR_PORT</identifier>
		<reg_addr>1</reg_addr>
		<reg_addr>0</reg_addr>
		<reg_size>8</reg_size>
	</register_def>
	<proc_def>
		<proc_id>Init</proc_id>
		<var_list>
			<var_def>
				<phys_var_def>
					<type_spec>BOOL</type_spec>
					<identifier>I_HANDS</identifier>
					<reg_bits_spec_list>
							<identifier>SENSOR_PORT[1]</identifier>
					</reg_bits_spec_list>
				</phys_var_def>
				<scope_spec>FOR ALL</scope_spec>
			</var_def>
			<var_def>
				<phys_var_def>
					<type_spec>BOOL</type_spec>
					<identifier>O_DRYER</identifier>
					<reg_bits_spec_list>
						<identifier>ACTUATOR_PORT[1]</identifier>
					</reg_bits_spec_list>
				</phys_var_def>
				<scope_spec>FOR ALL</scope_spec>
			</var_def>
		</var_list>
		<state_def>
			<state_id>Waiting</state_id>
			<statements_list>
				<if_statement>
					<expression_list>
						<expression>I_HANDS==ON</expression>
						<binary_operator>||</binary_operator>
                        <expression>I_HANDS==OFF</expression>
					</expression_list>
					<compound_statement>
						<statements_list>
							<expression_statement>O_DRYER=ON</expression_statement>
							<next_statement>NEXT</next_statement>
						</statements_list>
					</compound_statement>
					<expression_else>
						<statements_list>
                            <expression_statement>O_DRYER=OFF</expression_statement>
						</statements_list>
					</expression_else>
				</if_statement>
			</statements_list>
		</state_def>
		<state_def>
			<state_id>Drying</state_id>
			<statements_list>
				<if_statement>
					<expression_list>
						<expression>I_HANDS==ON</expression>
					</expression_list>
					<reset_statement></reset_statement>
				</if_statement>
			</statements_list>
			<timeout_statement>
				<int_constant>10</int_constant>
				<state_transition>Waiting</state_transition>
			</timeout_statement>
		</state_def>
	</proc_def>
</program>
